<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.TwoTone.Delete" Class="mr-3 mb-n1" />
            @Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText>Insert the resource name '@(ResourceName)' to confirm the operation.</MudText>
        <MudTextField Value="@InsertedResourceName" Immediate="true" TextChanged="InsertedResourceNameChanged" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Disabled="@(!IsValidResourceName)" Color="Color.Error" OnClick="Confirm">Confirm delete</MudButton>
    </DialogActions>
</MudDialog>
